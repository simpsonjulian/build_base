<h1>Listing people</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Blog url</th>
    <th>Linkedin url</th>
    <th>Title</th>
	<th>Tool</th>
  </tr>

<% for person in @people %>
  <tr>
    <td><%=link_to person.first_name + ' ' + person.surname, person%></td>

	<td><%= link_to 'search', "http://www.google.co.uk/search?q=#{person.first_name}+#{person.surname}", {:popup => true} %></td>
	<td><%= link_to 'Edit', edit_person_path(person) %></td>
    <!-- <td><%= link_to(person.blog_url,person.blog_url) %></td>
       <td><%= link_to(person.linkedin_url,person.linkedin_url) %></td> -->
    <td><%=h person.title %></td>
    <td><%= link_to person.tool.name, person.tool %></td>
    <!-- <td><%= link_to 'Show', person %></td> -->
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

