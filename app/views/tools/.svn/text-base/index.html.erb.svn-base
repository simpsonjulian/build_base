<h1>Listing tools</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Kind</th>
  </tr>

<% for tool in @tools %>
  <tr>
    <td><%=h tool.name %></td>
    <td><%=link_to(tool.url,tool.url) %></td>
    <td><%=h tool.kind %></td>

    <td><%= link_to 'Show', tool %></td>
    <td><%= link_to 'Edit', edit_tool_path(tool) %></td>
    <td><%= link_to 'Destroy', tool, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tool', new_tool_path %>
<%= link_to 'People', people_path %>
